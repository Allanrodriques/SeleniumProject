<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="CrossbrowserTesting suite" thread-count="5" parallel="tests">

	<test name="Chrome test">
		<parameter name="browser" value="Chrome" />
		<classes>
			<class name="testNG_Parallel.FirstTestNGProg" />
			<class name="testNG_Parallel.DataProviderTest" />
			<class name="testNG_Parallel.DataDrivenTesting" />
		</classes>
	</test> <!-- Default test -->

	<test name="Firefox test">
		<parameter name="browser" value="Firefox" />
		<classes>
			<class name="testNG_Parallel.FirstTestNGProg" />
			<class name="testNG_Parallel.DataProviderTest" />
			<class name="testNG_Parallel.DataDrivenTesting" />
		</classes>
	</test> <!-- Default test -->

	<test name="Edge test">
		<parameter name="browser" value="Edge" />
		<classes>
			<class name="testNG_Parallel.FirstTestNGProg" />
			<class name="testNG_Parallel.DataProviderTest" />
			<class name="testNG_Parallel.DataDrivenTesting" />
		</classes>
	</test> <!-- Default test -->

</suite> <!-- Default suite -->